<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Task List</title> <!-- Set a static title for the index page -->
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="main w-full min-h-screen bg-zinc-900">
        <div class="form p-10 text-white">
            <form action="/create" method="post">
                <input type="text" class="rounded-md block px-5 py-2 resize-none bg-zinc-800 w-full" placeholder="Title goes here" name="title" required>
                <textarea class="block mt-2 px-5 py-2 rounded-md bg-zinc-800 w-full" placeholder="Write your task details here" name="details" required></textarea>
                <input type="submit" class="bg-blue-600 mt-2 rounded-md px-5 py-2" value="Create Task">
            </form> 
        </div>
        <div class="tasks flex gap-3 flex-wrap p-10">
            <% if (files.length > 0) { %>
                <% files.forEach(function(val) { %>
                    <div class="task w-72 rounded-md px-3 py-4 bg-zinc-800">
                        <h1 class="text-white text-3xl tracking-tighter"><%= val %></h1>
                        <a class="text-blue-500 inline-block mt-3" href="/file/<%= val %>">Read more</a> <!-- Use the correct variable here -->
                    </div>
                <% }) %>
            <% } else { %>
                <h3 class="text-zinc-600">No tasks yet</h3>
            <% } %>
        </div>
    </div>
</body>
</html>
